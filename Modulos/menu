        echo ""
        echo -e "\033[0;34m━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\033[0m"
        echo -e " \033[1;33m[\033[1;31m!\033[1;33m]  If I see this script being resell I will delete it   [\033[1;31m!\033[1;33m]\033[0m"
        echo -e "\033[0;34m━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━\033[0m"
        echo ""
        echo -ne "\033[1;32mChoose a menu \033[1;33m?\033[1;31m?\033[1;37m : "
        read x

        case "$x" in
        1 | 01)
            clear
            criarusuario
